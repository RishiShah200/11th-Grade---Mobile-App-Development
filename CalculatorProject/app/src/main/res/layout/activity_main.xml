<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:id="@+id/id_mainlayout"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/id_horizontalscrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/id_output"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:gravity="right|center_vertical"
            android:text="Output"
            android:textSize="60dp"
            android:textStyle="bold" />
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:hapticFeedbackEnabled="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:textSize="20dp">

        <Button
            android:id="@+id/id_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="1"
            android:layout_margin="2dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="2"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="3"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_buttonplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="+"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:hapticFeedbackEnabled="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/id_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="4"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="5"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="6"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_buttonminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="â€“"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:hapticFeedbackEnabled="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/id_button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="7"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="8"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="9"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_buttonmultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="*"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:hapticFeedbackEnabled="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/id_buttonclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="C"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="0"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_buttonequals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="="
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_buttondivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorAccent"
            android:onClick="onClick"
            android:text="/"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>