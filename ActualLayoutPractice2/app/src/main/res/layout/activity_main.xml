<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button5"
        android:layout_alignStart="@+id/id_button5"
        android:layout_marginStart="-90dp"
        android:layout_marginBottom="50dp"
        android:text="Button 1" />

    <Button
        android:id="@+id/id_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button5"
        android:layout_alignEnd="@+id/id_button5"
        android:layout_marginEnd="-90dp"
        android:layout_marginBottom="50dp"
        android:text="Button 2" />

    <Button
        android:id="@+id/id_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button5"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/id_button5"
        android:text="Button 5" />

    <Button
        android:id="@+id/id_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button5"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/id_button5"
        android:text="Button 4" />

    <Button
        android:id="@+id/id_button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Button 3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button"
        android:layout_alignStart="@+id/id_button"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="5dp"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button2"
        android:layout_alignEnd="@+id/id_button2"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="5dp"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button5"
        android:layout_alignStart="@+id/id_button5"
        android:layout_alignEnd="@+id/id_button5"
        android:layout_marginStart="31dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="31dp"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button4"
        android:layout_alignStart="@+id/id_button4"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button3"
        android:layout_alignEnd="@+id/id_button3"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        android:text="OFF" />
</RelativeLayout>

